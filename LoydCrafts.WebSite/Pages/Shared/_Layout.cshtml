<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReuseSU.WebSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
</head>
<body>

    <header class="header-css">
        <!-- Our custom built header class. -->

        <div class="reuse-header">
            <div class="header-image">
                <img src="https://www.seattleu.edu/media/marketing-communications/branding/spirit-marks/marcom-spirit-marks/SUinterlock.png"
                     width="65" height="65">
            </div>
            <div class="header-title">
                ReuseSU
            </div>
            <div class="header-motto">
                Simple, sustainable sharing
                <button type="button" class="btn btn-outline-dark header-logout">Logout</button>
            </div>
        </div>

    </header>
    <div class="container">
        <!-- Contains the New Post and Search functionality -->
        <div class="utility-bar">
            <div class="new-post">
                <div class="new-post-plus">
                    +
                </div>
                <div class="new-post-afterplus">
                    New Post
                </div>
            </div>
            <div class="search-bar">
                <select name="SortBy" id="SortBy" class="sort-by">
                    <option value="newest">Newest</option>
                    <option value="oldest">Oldest</option>
                    <option value="user">User A-Z</option>
                    <option value="itemTitle">Item Title</option>
                </select>
                <button type="submit" class="search-button">Search</button>
                <input type="text" placeholder="Search.." name="search" class="search-input">
            </div>
        </div>
    </div>
    <!-- Contains everything below the header, except modal divs -->
    <div class="container">


        <!-- A container for the sidebar information-->
        <div class="sidebar">

            <!-- The upper box of the left sidebar -->
            <div class="sidebar-upper">

                <button type="button" class="btn btn-outline-dark sidebar-upper-button">Home</button><br />
                <button type="button" class="btn btn-outline-dark sidebar-upper-button">About</button>
                <button type="button" class="btn btn-outline-dark sidebar-upper-button">Usage Guidelines</button>
                <button type="button" class="btn btn-outline-dark sidebar-upper-button" data-toggle="modal" data-target="#tutModal">
                    Tutorial
                </button>
                <button type="button" class="btn btn-outline-dark sidebar-upper-button">My Posts</button>

            </div>

            <!-- Lower box of the left sidebar -->
            <div class="sidebar-lower">

                <div class="lower-sidebar-text">Set defaults</div>
                <div class="checkbox"><input type="checkbox" checked />&nbsp;Test</div>
                <div class="checkbox"><input type="checkbox" />&nbsp;Test</div>

                <div class="lower-sidebar-text">Filter by Category</div>
                <div class="checkbox"><input type="checkbox" checked />&nbsp;Test</div>
                <div class="checkbox"><input type="checkbox" />&nbsp;Test</div>
                <div class="checkbox"><input type="checkbox" checked />&nbsp;Test</div>
                <div class="checkbox"><input type="checkbox" />&nbsp;Test</div>
                <div class="checkbox"><input type="checkbox" checked />&nbsp;Test</div>
                <div class="checkbox"><input type="checkbox" />&nbsp;Test</div>
            </div>

        </div>

        <!-- The main area, for looking at item listings/posts -->
        <main role="main" class="pb-3">
            <div class="listing">
                <div class="listing-img"><img src="~/img/default_image_mtn.png"></div>
                <div class="listing-item-title" style="float:left">Apple Earbuds 1</div>
                <div class="listing-item-date-person" style="float:right">January 23, 2020 by dherstad</div>
                <div class="listing-item-text">1 Great earbuds, only $75!</div>
            </div>
            <div class="listing">
                <div class="listing-img"><img src="~/img/default_image_mtn.png"></div>
                <div class="listing-item-title" style="float:left">Apple Earbuds 2</div>
                <div class="listing-item-date-person" style="float:right">January 23, 2020 by dherstad</div>
                <div class="listing-item-text">2 Great earbuds, only $75!</div>
            </div>
            <div class="listing">
                <div class="listing-img"><img src="~/img/AppleEarbudsSmall.jpg"></div>
                <a class="listing-item-title" asp-area="" asp-page="/12_ItemReadView" style="float:left">Apple Earbuds 3</></a>
                <div class="listing-item-date-person" style="float:right">January 23, 2020 by dherstad</div>
                <div class="listing-item-text">3 Great earbuds, only $75!</div>
            </div>
            <div class="listing">
                <div class="listing-img"><img src="~/img/default_image_mtn.png"></div>
                <div class="listing-item-title" style="float:left">Apple Earbuds 4</div>
                <div class="listing-item-date-person" style="float:right">January 23, 2020 by dherstad</div>
                <div class="listing-item-text">4 Great earbuds, only $75!</div>
            </div>
            @RenderBody()
        </main>
    </div>

    <!-- This is the footer, usually the area for copyright and maybe a little navigation -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ReuseSU.WebSite - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>


<!-- All stuff that follows is a result of modal divs -->

<!-- This is the tutorial-1 modal div -->
<div class="modal" id="tutModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Tutorial</h4>
            </div>

            <div class="modal-body">
                Tutorial information.<br /><br />Thing.
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">End tutorial</button>
            </div>

        </div>
    </div>
</div>