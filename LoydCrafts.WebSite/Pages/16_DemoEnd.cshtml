@page
@model ReuseSU.website.Pages.DemoEndModel
@{
    ViewData["Title"] = "DemoEnd";
}

<!-- JS copy/pasted from https://www.tutorialrepublic.com/faq/how-to-launch-bootstrap-modal-on-page-load.php -->
<script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $("#flagging-confirmation").modal('show');
    });
</script>










<!-- Contains sidebar-upper, and then everything else is page-specific-->
<div class="container">


    <!-- A container for the sidebar information-->
    <div class="sidebar">

        <!-- The upper box of the left sidebar -->
        <div class="sidebar-upper">

            <button type="button" class="btn btn-outline-dark sidebar-upper-button">Home</button><br />
            <button type="button" class="btn btn-outline-dark sidebar-upper-button">About</button>
            <button type="button" class="btn btn-outline-dark sidebar-upper-button">Usage Guidelines</button>
            <button type="button" class="btn btn-outline-dark sidebar-upper-button" data-toggle="modal" data-target="#tutModal">
                Tutorial
            </button>
            <button type="button" class="btn btn-outline-dark sidebar-upper-button">My Posts</button>

        </div>

        <!-- Lower box of the left sidebar -->
        <div class="sidebar-lower">

            <div class="lower-sidebar-text">Set defaults</div>
            <div class="checkbox"><input type="checkbox" checked />&nbsp;Test</div>
            <div class="checkbox"><input type="checkbox" />&nbsp;Test</div>

            <div class="lower-sidebar-text">Filter by Category</div>
            <div class="checkbox"><input type="checkbox" checked />&nbsp;Test</div>
            <div class="checkbox"><input type="checkbox" />&nbsp;Test</div>
            <div class="checkbox"><input type="checkbox" checked />&nbsp;Test</div>
            <div class="checkbox"><input type="checkbox" />&nbsp;Test</div>
            <div class="checkbox"><input type="checkbox" checked />&nbsp;Test</div>
            <div class="checkbox"><input type="checkbox" />&nbsp;Test</div>
        </div>

    </div>

    <!-- The main area, for looking at item listings/posts -->
    <main role="main" class="pb-3">
        <div class="listing">
            <div class="listing-img"><img src="~/img/default_image_mtn.png"></div>
            <div class="listing-item-title" style="float:left">Apple Earbuds 1</div>
            <div class="listing-item-date-person" style="float:right">January 23, 2020 by dherstad</div>
            <div class="listing-item-text">1 Great earbuds, only $75!</div>
        </div>
        <div class="listing">
            <div class="listing-img"><img src="~/img/default_image_mtn.png"></div>
            <div class="listing-item-title" style="float:left">Apple Earbuds 2</div>
            <div class="listing-item-date-person" style="float:right">January 23, 2020 by dherstad</div>
            <div class="listing-item-text">2 Great earbuds, only $75!</div>
        </div>
        <div class="listing">
            <div class="listing-img"><img src="~/img/AppleEarbudsSmall.jpg"></div>
            <a class="listing-item-title" asp-area="" asp-page="/12_ItemReadView" style="float:left">Apple Earbuds 3</></a>
            <div class="listing-item-date-person" style="float:right">January 23, 2020 by dherstad</div>
            <div class="listing-item-text">3 Great earbuds, only $75!</div>
        </div>
        <div class="listing">
            <div class="listing-img"><img src="~/img/default_image_mtn.png"></div>
            <div class="listing-item-title" style="float:left">Apple Earbuds 4</div>
            <div class="listing-item-date-person" style="float:right">January 23, 2020 by dherstad</div>
            <div class="listing-item-text">4 Great earbuds, only $75!</div>
        </div>

    </main>
</div>



<!-- FLAGGING CONFIRMATION MODAL -->
<div class="modal fade right" id="flagging-confirmation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">

    <div class="modal-dialog modal-side modal-top-right" role="document">


        <div class="modal-content">
            <div class="modal-header">
                <h2>Thank you!</h2>
            </div>
            <div class="modal-body">
                <p>Thanks for flagging and doing your part to keep the community safe and focused on doing what it does best. The post has been removed!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Done!</button>
            </div>
        </div>
    </div>
</div>
